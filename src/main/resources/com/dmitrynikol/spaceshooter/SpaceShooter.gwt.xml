<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='spaceshooter'>
  <inherits name='com.google.gwt.user.User'/>
  <inherits name='com.google.gwt.user.theme.clean.Clean'/>
  <inherits name="com.google.gwt.inject.Inject"/>

  <inherits name='com.allen_sauer.gwt.voices.gwt-voices'/>
  <inherits name="org.realityforge.gwt.appcache.linker.Linker"/>

  <add-linker name="appcache"/>

  <extend-configuration-property name="appcache_static_files" value="./"/>
  <extend-configuration-property name="appcache_static_files" value="SpaceShooter.html"/>
  <extend-configuration-property name="appcache_static_files" value="SpaceShooter.css"/>

  <!-- TODO: These next two lines do not work? -->
  <extend-configuration-property name="appcache_static_files" value="images/*"/>
  <extend-configuration-property name="appcache_static_files" value="css/*"/>

  <!-- Specify the app entry point class.                         -->
  <entry-point class='com.dmitrynikol.spaceshooter.client.SpaceShooter'/>
  
  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
</module>
